    "type": "git",
    "url": "git+https://github.com/radiantmediaplayer/rmp-vast.git"
  },
  "main": "./dist/rmp-vast.js",
  "types": "./types/js/index.d.ts",
  "scripts": {
    "test": "node ./test/run.js",
    "testAndroid": "node ./test/run.js android",
    "testSafari": "node ./test/run.js safari",
